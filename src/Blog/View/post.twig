{% include 'Common/View/header.twig' %}
{% block body %}
	<body class="top-wave">
	{% endblock %}
	<section class="container">
		<img src="/img/BlogPostHeader.jpg" alt="Blog Post Header" class="post-page__img">

		<article class="u-margin--medium"> 
			<div class="post-page__header clearfix"> 
				<h1 class="post-description__title">{{ post.title }}</h1>
				<span class="post-description__date">{{ post.date }}</span> 
			</div>
			<p>{{ post.content|raw }}</p>
		</article>

		<div class="post-end clearfix">
			<a class="post-page-end__button--previous clearfix">
				<i class="arrow left"></i>
				<span>poprzedni artykuł </span>
			 </a>

			<div class="post-page__author-info clearfix"> 
				<img src="/img/p1d7b3vja81eaa1gn1sgg57q193f4_q0ftdd.jpg" alt="Author's Headshot" class="author-box__img">
				<div class="author-box__description"> 
					<p class="author-title">AUTHOR:</p>
					<p class="author-info--name"> {{ post.author_forename }} {{ post.author_surname }} </p>
					<p class="author-info--position"> {{ post.author_position }}</p>
				</div>
			</div>

			<a class="post-page-end__button--next clearfix"> 
				<span>następny artykuł</span>
				<i class="arrow right"></i>
			</a>
		</div>
	</section>
	{% include 'Common/View/footer.twig' %}
</body>
